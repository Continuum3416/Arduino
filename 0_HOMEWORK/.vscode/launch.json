{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GCC Executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/display.exe",
            "args": [],  // Command line arguments (if any)
            "stopAtEntry": false,  // Set to true if you want to stop at the entry point
            "cwd": "${workspaceFolder}",  // Working directory
            "environment": [],
            "externalConsole": true,  // Use an external console
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",  // Path to MinGW GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build",  // Your build task, modify if needed
            //"miDebuggerArgs": ""
        }
    ]
}
